#set ($template = $data.getTemplateInfo())
$!template.setLayoutTemplate("NoMenu.vm")
$page.setTitle("XDAT -- Register")
$page.setBgColor($ui.bgcolor)
<DIV VALIGN="top">
#parse("/screens/userValidationJS.vm")

<form name="form2" id="registerForm" method="post" action="$link.setAction("XDATRegisterUser")" onSubmit="return XNAT.app.register.validateForm();">
		#foreach($key in $!turbineUtils.GetDataParameterHash($data).keySet())
        	#if ($key!="action" && $key!="template" &&$key!="password" &&$key!="phone" &&$key!="comments" &&!$key.startsWith("xdat:user") &&$key!="username" &&$key!="exception")
   		<input type="hidden" name="$key" value="$!turbineUtils.escapeHTML($!turbineUtils.GetPassedParameter($key,$data))">	
        	#end
        #end
  <table valign="top" align="center">
	#if ( $data.getMessage() )
		<tr>
	  		<td colspan="2">
	  			<font color="#FF0000" size="2" face="verdana,geneva,helvetica">
	  				$data.getMessage()<br>
	  			</font>
			</td>
		</tr>
	#end
    <tr>
    	<TH colspan="2"><font size="+1" style="line-height:20px;">New User Registration</font></TH>
    </tr>
    <tr>
    	<TD colspan="2"><hr/></TD>
    </tr>
    <tr>
    	<TH colspan="2" align="left">Login Details</TH>
    </tr>
    <tr>
      #formLabelRequired("Username")
  	  <TD><input type="text" id="xdat:user.login" name="xdat:user.login" ONCHANGE="validateUsername(this,'Register');"></TD>
    </tr>
    <tr>
      #formLabelRequired("Password")
  	  <TD><input type="password" id="xdat:user.primary_password" name="xdat:user.primary_password" autocomplete="off"></TD>
    </tr>
    <tr>
      #formLabelRequired("Re-enter password")
  	  <TD><input type="password" id="xdat:user.password_check" name="xdat:user.primary_password" autocomplete="off"></TD>
    </tr>
    <tr>
    	<TD colspan="2"><hr/></TD>
    </tr>
    <tr>
      #formLabelRequired("First Name")
  	  <TD><input type="text" id="xdat:user.firstname" name="xdat:user.firstname"></TD>
    </tr>
    <tr>
      #formLabelRequired("Last Name")
  	  <TD><input type="text" id="xdat:user.lastname" name="xdat:user.lastname"></TD>
    </tr>
    <tr>
      #formLabelRequired("Email")
  	  <TD><input type="text" id="xdat:user.email" name="xdat:user.email"></TD>
    </tr>
    <tr>
      #formLabel("Phone")
  	  <TD><input type="text" name="phone"></TD>
    </tr>
    
    <tr>
      #formLabel("Study Site or Lab")
  	  <TD><input type="text" name="lab"></TD>
    </tr>
	#if($turbineUtils.toBoolean($configProps.getProperty("UI.allow-new-user-comments","true")))
    <tr>
    	<TD colspan="2"><hr/></TD>
    </tr>
    <tr>
    	<TH align="left">Comments</TH>
    	<td>Please include a brief description of how you plan to use this site.</td>
    </tr>
    <tr>
  	  <TD colspan=2><textarea name="comments" rows="4" cols="50" style="text-align:left;"></textarea></TD>
    </tr>
	#end
    <tr>
				      <td></td>
      <td align ="left">
        <font face="$ui.sansSerifFonts">
         <input type="hidden" name="xdat:user.primary_password.encrypt" value="true">
         <input type="submit" value="Register" id="Register">
        </font>
      </td>
    </tr>
  </table>
</form>
</DIV>