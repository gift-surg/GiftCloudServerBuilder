$page.setTitle("XDAT")
$page.setLinkColor($ui.alink)
$page.setVlinkColor($ui.vlink)
#if ($data.message)
<DIV class="error">$data.message</DIV><br>
#end
<p>
#parse("/screens/userValidationJS.vm")

<form name="form1" method="post" action="$link.setAction("ModifyUser")" onsubmit="if(validateUsername(document.getElementById('xdat:user.login')) && validatePassword(document.getElementById('xdat:user.primary_password')))return true;else return false;">
<table border="0" width="95%">
	<tr>
		<TH align=center colspan=2>User Details</TH>
	</tr>
	<tr>
		<TD align=right>Username:</TD>
	#if($item.getProperty("xdat_user_id"))
	<TD>$!item.getProperty("login")
			<INPUT type="hidden" id="xdat:user.login" name="xdat:user.login" value="$!item.getProperty("login")" />
		</TD>
	#else
	<TD><INPUT type="text" id="xdat:user.login" name="xdat:user.login" value="$!item.getProperty("login")" ONCHANGE="validateUsername(this,'eventSubmit_doSetup');"/></TD>
	#end
	</tr>
	<tr>
		<TD align=right>Password:</TD><TD><INPUT type="password" id="xdat:user.primary_password" name="xdat:user.primary_password" value="$!item.getProperty("xdat:user.primary_password")"/></TD>
	</tr>
	<tr>
		#if ($!item.getBooleanProperty("xdat:user.primary_password.encrypt","true"))
			<TD align=right>Encrypt Password:</TD>
			<TD><INPUT type="radio" name="xdat:user.primary_password.encrypt" value="1" CHECKED/>&nbsp;True&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
			<INPUT type="radio" name="xdat:user.primary_password.encrypt" value="0"/>&nbsp;False</TD>
		#else
			<TD align=right>Encrypt Password:</TD>
			<TD><INPUT type="radio" name="xdat:user.primary_password.encrypt" value="1"/>&nbsp;True&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
			<INPUT type="radio" name="xdat:user.primary_password.encrypt" value="0" CHECKED/>&nbsp;False</TD>
		#end
	</tr>
	##xdatHiddenBox("xdat:user.primary_password.encrypt" $item "true")
	#xdatHiddenBox("xdat:user.enabled" $item "false")
	<tr>
		<TD align=right>First Name:</TD><TD><INPUT type="text" name="xdat:user.firstname" value="$!item.getProperty("firstname")"/></TD>
	</tr>
	<tr>
		<TD align=right>Last Name:</TD><TD><INPUT type="text" name="xdat:user.lastname" value="$!item.getProperty("lastname")"/></TD>
	</tr>
	<tr>
		<TD align=right>Email:</TD><TD><INPUT type="text" name="xdat:user.email" value="$!item.getProperty("email")"/></TD>
	</tr>
	#xdatEditProps($item $edit_screen)
	<TR><TD COLSPAN=2 ALIGN=center><input type="submit" id="eventSubmit_doSetup" name="eventSubmit_doSetup" value="Submit"/></TD></TR>
</table>
</form>
</p>
