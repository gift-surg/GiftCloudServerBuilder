            <td colspan="2" align="center">
                <input type="button" onclick="window.close();" value="Close"/>&nbsp;&nbsp;&nbsp;<input type="submit" name="eventSubmit_doAddprojectpipeline" value="Submit"/>
            </td>
        </tr>

    </table>

